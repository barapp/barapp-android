<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/rii.solutions.campus.doorbell"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="company"
            type="rii.solutions.campus.data.CampusMember" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="?android:attr/listPreferredItemHeight"
        tools:background="@color/colorPrimary"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="@{company.companyName}"
            android:textAppearance="?android:textAppearanceLargeInverse"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            tools:text="Big Company Name"/>

        <TextView
            android:id="@+id/member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
            android:gravity="end"
            android:text="@{company.name}"
            android:background="@color/colorNeutralBackground"
            android:textAppearance="?android:attr/textAppearanceListItem"
            tools:text="John Doe" />

    </LinearLayout>
</layout>